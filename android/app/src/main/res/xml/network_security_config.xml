<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development (localhost and local network) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext for local development server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.86</domain>
        <domain includeSubdomains="true">192.168.1.0</domain>
    </domain-config>
    
    <!-- Allow HTTPS for Clerk and other external services -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">clerk.accounts.dev</domain>
        <domain includeSubdomains="true">clerk.com</domain>
        <domain includeSubdomains="true">accounts.clerk.dev</domain>
    </domain-config>
    
    <!-- Allow Mapbox domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.mapbox.com</domain>
        <domain includeSubdomains="true">*.mapbox.com</domain>
        <domain includeSubdomains="true">mapbox.com</domain>
    </domain-config>
</network-security-config>

